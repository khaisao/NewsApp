<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_article"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#222222"
    android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/iv_news"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:lines="2"
        android:text="Elon Musk accuses reporter of being ‘lobbyist’ over Tesla recall coverage"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_news" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="5"
        android:text="Tesla on Tuesday said it will recall 54,000 sedans after federal regulators flagged a self-driving functionality which had the car slow down and roll slowly through an intersection."
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_pub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="2022-02-02T15:17:10Z"
        android:textSize="12dp"
        android:textColor="#656565"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_des" />
    <ImageView
        android:src="@drawable/ic_outline_content_paste_24"
        app:layout_constraintTop_toTopOf="@id/tv_pub"
        app:layout_constraintBottom_toBottomOf="@id/tv_pub"
        app:layout_constraintEnd_toEndOf="@id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>
    <ImageView
        android:layout_marginTop="10dp"
        android:background="@drawable/item_article"
        app:layout_constraintEnd_toEndOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_pub"
        android:layout_width="0dp"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>